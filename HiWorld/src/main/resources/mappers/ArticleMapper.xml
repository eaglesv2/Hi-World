<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hiworld.article.dao.ArticleDAO">

	<!-- 최신 물품 조회 -->
	<select id="getAllArticle" resultType="articleVO">
		SELECT * FROM Shop_Article ORDER BY ArticleSerial DESC; 
	</select>

	<!-- 물품 정보 가져오기 -->
	<select id="getOneArticle" resultType="articleVO">
		SELECT * FROM Shop_Article WHERE ArticleName = #{ArticleName}
	</select>

	<insert id="insert">
		INSERT INTO User_Article
		VALUES(#{ArticleSerial},#{UserSerial},#{ArticleKinds},#{ArticleName})
	</insert>

	<insert id="basket"></insert>








</mapper>