<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hiworld.minihp.dao.MiniHpIntroDAO">
	
	<select id="getInfo" parameterType="String" resultType="String">
		SELECT hpInfo
		FROM MiniHP_Intro
		WHERE UserID = #{UserID}
	</select>
	
	<update id="updateInfo" parameterType="com.hiworld.minihp.vo.MiniHpIntroVO">
		UPDATE MiniHP_Intro
		SET hpInfo = #{hpInfo}
		WHERE UserID = #{UserID}
	</update>
</mapper>